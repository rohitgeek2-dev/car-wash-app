generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Appointment {
  id        Int      @id @default(autoincrement())
  service   String
  date      String
  time      String
  carType   String
  name      String
  email     String
  status    String   @default("Pending")
  createdAt DateTime @default(now())

  @@unique([date, time]) // âœ… ensures a time slot can be booked only once per date
}

